<!-- A single test.  -->
<!ELEMENT test
    (class, (argument | category | prerequisite | action)*)
>

<!-- The name of a test class.  -->
<!ELEMENT class (#PCDATA)>

<!-- An argument to a test class.  -->
<!ELEMENT argument (integer | text | set | attachment | enumeral)>
<!ATTLIST argument name CDATA #REQUIRED 
                   eval ( yes | no ) "no">

<!-- The name of a category to which the test belongs.  -->
<!ELEMENT category (#PCDATA)>

<!-- The test ID of another test that must be run before this one is. 
     The outcome attribute is the outcome that the other test must produce
     for this one to be run.  -->
<!ELEMENT prerequisite (#PCDATA)>
<!ATTLIST prerequisite outcome (PASS | FAIL | ERROR | UNTESTED) "PASS">

<!-- The ID of an action that must be invoked before and after this test
     is run.  -->
<!ELEMENT action (#PCDATA)>

<!ENTITY % fields PUBLIC 
    "-//Software Carpentry//ELEMENTS Fields Hierarcy V0.1//EN" 
    "fields.mod">
%fields;

