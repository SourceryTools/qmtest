<!-- A single resource.  -->
<!ELEMENT resource
    (class, (argument | property)*)
>

<!-- The name of a resource class.  -->
<!ELEMENT class (#PCDATA)>

<!-- An argument to a resource class.  -->
<!ELEMENT argument (integer | text | set | attachment | enumeral)>
<!ATTLIST argument name CDATA #REQUIRED 
                   eval ( yes | no ) "no">

<!-- A resource property.  -->
<!ELEMENT property (#PCDATA)>
<!ATTLIST property name CDATA #REQUIRED>

<!ENTITY % fields PUBLIC 
    "-//Software Carpentry//ELEMENTS Fields Hierarcy V0.1//EN" 
    "fields.mod">
%fields;

