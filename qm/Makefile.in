TOPDIR		= @top_srcdir@

include $(TOPDIR)/standard.mk

########################################################################
# additional rules
########################################################################

all:		setup_path.py track/qmtrack

# Generate setup_path.py by replacing the text @qm_top_directory@ with
# the path to this directory.
setup_path.py:	setup_path.py.in Makefile
	rm -f $@
	( echo "# This file is automatically generaged."; \
	  echo "# Don't edit this file; edit $< instead."; \
	  sed "s#@qm_top_directory@#$$(pwd)/..#" $< \
	) > $@
	chmod a-w $@

# Generate qmtrack by replacing the text @qm_setup_path_script@ with
# the path to the setup_path.py script.
track/qmtrack:	track/qmtrack.in Makefile
	rm -rf $@
	( echo "#!$(PYTHONBIN)"; \
	  echo "# This file is automatically generated."; \
	  sed "s#@qm_setup_path_script@#$$(pwd)/setup_path.py#" $< \
	) > $@
	chmod a-w $@
	chmod a+x $@
