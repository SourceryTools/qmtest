<!-- NAME: QMTrack Issue Classes V0.1 -->

<!-- Note that the issue database records the configuration of the -->
<!-- database, specifically all persistent state of the database other -->
<!-- than the issues themselves.  -->

<!-- An issue database configuration.  -->
<!ELEMENT issue-classes (issue-class*)>

<!-- The specification of an issue class.  -->
<!ELEMENT issue-class (title, description, field*, trigger*)>
<!ATTLIST issue-class name CDATA #REQUIRED
                      next-id CDATA #REQUIRED>

<!-- The user-visible title of an issue class.  -->
<!ELEMENT title (#PCDATA)>

<!-- The specification of a field.  -->
<!ELEMENT field (class, default-value, property*, field?)>
<!ATTLIST field name CDATA #REQUIRED>

<!-- The Python class of a field or trigger.  -->
<!ELEMENT class (#PCDATA)>

<!-- The default value of a field.  -->
<!ELEMENT default-value (integer | text | set | attachment | enumeral)>

<!-- A field or trigger property.  -->
<!ELEMENT property (#PCDATA)>
<!ATTLIST property name CDATA #REQUIRED>

<!-- A trigger description.  -->
<!ELEMENT trigger (class, property*)>

<!ENTITY % fields PUBLIC 
    "-//Software Carpentry//ELEMENTS Fields Hierarcy V0.1//EN" 
    "fields.mod">
%fields;


