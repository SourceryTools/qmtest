# Set up the Python module lookup path to find QMTrack.
execfile("@qm_setup_path_script@")

########################################################################
# imports
########################################################################

import os
import qm.cmdline
import qm.common
import qm.platform
import qm.track
import qm.track.cmdline
import sys

########################################################################
# script
########################################################################

# Set the program name.
qm.common.program_name = "QMTrack"

# Store the path to the command, in case someone wants it later.
qm.track.state["script_name"] = sys.argv[0]

# Load RC options.
qm.rc.Load("track")
                                                       
try:
    # Parse the command line.
    command = qm.track.cmdline.Command(sys.argv[1:])

    # If the command needs an IDB, set it up.
    if command.RequiresIdb():
        # Find the path to the IDB.
        try:
            # Was an IDB specified in the command?
            idb_path = command.GetGlobalOptions()["idb"]

        except KeyError:
            # Wasn't specified in the command.  Try to get it from an
            # environment variable.
            environment_variable_name = qm.track.state["idb_env_var"]
            try:
                idb_path = os.environ[environment_variable_name]
            except KeyError:
                # The environment variable isn't set.  We don't know where to
                # find the IDB, so bail.
                raise qm.cmdline.CommandError, \
                      qm.error("missing idb",
                               envvar=environment_variable_name)

        # Open a session to the IDB.
        qm.track.open_idb(idb_path)

    try:
        # Execute the command.
        exit_code = qm.track.execute(command, sys.stdout, sys.stderr)
    finally:
        # Close the session, if one's open.
        qm.track.close_idb()

except qm.cmdline.CommandError, msg:
    script_name = qm.track.state["script_name"]
    sys.stderr.write("%s: %s\n" % (script_name, msg))
    sys.stderr.write("Invoke %s --help for help with usage.\n"
                     % script_name)
    exit_code = 2

except KeyboardInterrupt:
    # User killed it; that's OK.
    exit_code = 0

except qm.platform.SignalException, exception:
    # The program was ended by an exception.
    sys.stderr.write("Terminated by %s.\n" % str(exception))
    exit_code = 0


# End the program.
sys.exit(exit_code)

